<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        <TextBlock HorizontalAlignment="Left" Margin="264,83,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" IsChecked="True" Content="Hello" HorizontalAlignment="Left" Height="22" Margin="196,130,0,0" VerticalAlignment="Top" Width="96"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Height="11" Margin="454,130,0,0" VerticalAlignment="Top" Width="104"/>
        <Button Content="Display" HorizontalAlignment="Left" Height="31" Margin="292,252,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click"/>

    </Grid>
</Window>
